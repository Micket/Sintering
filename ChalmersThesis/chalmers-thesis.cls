  \vspace*{\stretch{1}}
  {\Large \@title\par}
  \vskip 1em
  \@ifundefined{@subtitle}{}{{\@subtitle\par}}
  \vskip 1em
  {\thesisname\par}
  {\renewcommand{\and}{, }\MakeUppercase{\@author}\par}
  \vspace*{\stretch{3}}%\vfill
  {\@department\par}
  \@ifundefined{@division}{}{{\textit{\@division}\par}}
  {\MakeUppercase{\universityname}\par}
  \vskip 2mm
  {\cityname, \countryname\ \@copyrightyear\par}
 \end{center}
}

\newcommand{\makeprintinfopage}{
 \newpage
 {\noindent \@title\\
  \@ifundefined{@subtitle}{}{\@subtitle\\}
  \renewcommand{\and}{\\}\MakeUppercase{\@author}
  \@ifundefined{@ISBN}{}{\\ISBN \@ISBN\\}
  \par}
 \vskip 10mm
 {\noindent \copyright\ {\renewcommand{\and}{, }\MakeUppercase{\@author}}, \@copyrightyear\par}
 \vspace*{\stretch{1}}
 {\noindent \thesisname\ \inname \@thesisin\ \@reportno\\ % TODO: This is inconsistent!
  ISSN \@ISSN\\
  \@department\\
  \@ifundefined{@division}{}{\@division\\}
  \universityname\\
  \@postcode\ \cityname\\
  \countryname\\
  \telephonename: \@telephone\par}
 \vspace*{\stretch{3}}
 \@ifundefined{@covercaption}{}{{\noindent \covername:\\ \@covercaption\par}}
 \vskip 5mm
 {\noindent \@printers
  \@department
  \\ \cityname, \countryname\ \@copyrightyear\par}
}

\newcommand{\makeabstractpage}{
 \newpage
 \setcounter{page}{1}
 \pagenumbering{roman}
 {\noindent \@title\\
  \@ifundefined{@subtitle}{}{\@subtitle\\}
  \thesisname\ \inname \@thesisin\\
   {\renewcommand{\and}{\\}\MakeUppercase{\@author}}\\
  \@department\\
  \@ifundefined{@division}{}{\@division\\}
  \universityname\par}
 \phantomsection\addcontentsline{toc}{chapter}{\abstractname}
 \begin{center}\Large\textsc{\abstractname}\end{center} \@firstabstract
 \\[1em]
 \noindent \keywordsname: \@keywords
}

\renewcommand{\maketitle}{%
 \if@cover
  \makecoverpage
 \fi

 \maketitlepage

 \makeprintinfopage

 \makeabstractpage\pagestyle{plain}

 % Empty or second abstract
 \@ifundefined{@secondabstract}{
  \newpage\mbox{}}{
  \newpage\begin{otherlanguage}{\@secondarylanguage}
    \begin{center}\Large\textsc{\abstractname}\end{center} \@secondabstract \end{otherlanguage}}

 \@ifundefined{@dedication}{}{
  \cleardoublepage
  \vspace*{0.2\textheight}
  \begin{center}\@dedication\end{center}
 }

 % Preface and acknowledgements
 \cleardoublepage
 \@ifundefined{@preface}{}{
  \phantomsection\addcontentsline{toc}{chapter}{\prefacename}
  \begin{center}\Large\textsc{\prefacename}\end{center} \@preface
 }
 \@ifundefined{@acknowledgements}{}{
  \phantomsection\addcontentsline{toc}{chapter}{\acknowledgementsname}
  \begin{center}\Large\textsc{\acknowledgementsname}\end{center} \@acknowledgements
 }

 % If its a doctorate or licentiate thesis, include the table of papers.
 \if@bachelorormasters\else
  \cleardoublepage
  \tableofpapers
 \fi

 \cleardoublepage
 \tableofcontents

 % Sets up page numbering for the rest of the document.
 \newpage
 \pagenumbering{arabic}
 \pagestyle{fancy}
}

